package-as: Morphomatic

# No externals pulled: you embed libs already.
externals: {}

# Make the archive clean: ignore CI, tooling, dev assets, screenshots, etc.
ignore:
  - .git/
  - .github/**           # all workflows, templates
  - .vscode/**           # optional
  - .idea/**             # optional
  - .luarocks/**         # local rocks cache
  - Libs/**/.git/**      # nested git data inside libs
  - screenshots/**       # images not shipped in zip
  - logo.png             # marketing asset
  - LATEST_CHANGELOG.md  # temp file generated by CI
  - .gitignore
  - .editorconfig
  - .luacheckrc
  - .stylua.toml
  - stylua.toml
  - cliff.toml

enable-nolib-creation: no

# Use the repo CHANGELOG as the changelog source for uploads.
# (Ton workflow copie LATEST_CHANGELOG.md -> CHANGELOG.md juste avant le packager)
manual-changelog: CHANGELOG.md

# Upload target(s). Set your numeric project ID here.
curseforge:
  project-id: 1340910
  changelog: CHANGELOG.md
  changelog-format: markdown
